<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    //

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="547dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/chatview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/sendmsg2"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/butSend"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="41dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="194dp"
                android:theme="@style/EditTextStyle"
                android:hint="请输入你的密码"
                android:textSize="20sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/txtmsg"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="31dp"
                android:text="~~~~~~ 注册界面 ~~~~~~" />

            <EditText
                android:id="@+id/sendmsg"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/butSend"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="39dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="318dp"
                android:hint="请输入你的id"
                android:textSize="20sp"
                android:theme="@style/EditTextStyle"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/butSend"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="注册"
                android:textSize="20sp" />

            <Button
                android:id="@+id/butConn"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="150dp"
                android:layout_alignParentRight="true"
                android:text="开始游戏"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chatview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/easy_btn"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:gravity="center_horizontal"
                android:text="@string/EasyGame"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif"></Button>

            <Button
                android:id="@+id/medium_btn"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="50dp"
                android:text="@string/MediumGame"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif"></Button>

            <Button
                android:id="@+id/hard_btn"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="50dp"
                android:text="@string/HardGame"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif"></Button>

            <Switch
                android:id="@+id/MusicBox"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="400dp"
                android:layout_marginLeft="100dp"
                android:text="@string/music" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>